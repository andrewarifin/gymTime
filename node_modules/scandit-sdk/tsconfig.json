{
  "extends": "./config/tsconfig.strict",
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["howler.core"],
    "baseUrl": ".", // required for "paths"
    "paths": {
      "scandit-sdk": ["src/index.ts"], // write tests without relative paths
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
